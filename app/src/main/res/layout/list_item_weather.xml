<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/weather_card_view_width"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/weather_card_view_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/colorDarkBackground"
    app:cardCornerRadius="@dimen/weather_card_view_corner_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/my_weather_list_item_date_textView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:textAlignment="center"
            android:textSize="@dimen/weather_list_item_date_text_view_text_size"
            android:textColor="@color/colorTextOnDark"
            android:layout_marginTop="@dimen/weather_list_item_date_text_view_margin_top"/>

        <ImageView
            android:id="@+id/my_weather_list_item_imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="6" />

        <TextView
            android:id="@+id/my_weather_list_item_condition_textView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:textAlignment="center"
            android:textSize="@dimen/weather_list_item_text_size"
            android:textColor="@color/colorTextOnDark"/>

        <TextView
            android:id="@+id/my_weather_list_item_condition_detail_textView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:textAlignment="center"
            android:textSize="@dimen/weather_list_item_condition_detail_text_view_text_size"
            android:textColor="@color/colorTextOnDark"/>

        <TextView
            android:id="@+id/my_weather_list_item_temp_textView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:textAlignment="center"
            android:textSize="@dimen/weather_list_item_temp_text_view"
            android:textColor="@color/colorTextOnDark"
            android:layout_marginBottom="8dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>